extends ../layout

block content
  h1 Create post
  .types.tabbed
    input#link.tab(type="radio", name="tabs", checked="checked")
    label(for="link") Link
    include types/link
    input#image.tab(type="radio", name="tabs")
    label(for="image") Image
    include types/image
    input#note.tab(type="radio", name="tabs")
    label(for="note") Note
    include types/note
    input#full.tab(type="radio", name="tabs")
    label(for="full") Full
    include types/full
